<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- If you want to set default init and destroy method for all beans 
		then use default prefix and add that code in beans element -->
	<bean id="hello" class="com.practice.HelloWorld" init-method="init" destroy-method="destroy">
	</bean>

</beans>
